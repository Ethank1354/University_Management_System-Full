<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@faculty-profile-style.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Faculty ID -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Faculty ID:" />
         <TextField fx:id="facultyIdField" />
      </HBox>

      <!-- Name -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Name:" />
         <TextField fx:id="nameField" />
      </HBox>

      <!-- Degree -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Degree:" />
         <TextField fx:id="degreeField" />
      </HBox>

      <!-- Research Interest -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Research Interest:" />
         <TextField fx:id="researchInterestField" />
      </HBox>

      <!-- Email -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Email:" />
         <TextField fx:id="emailField" />
      </HBox>

      <!-- Office Location -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Office Location:" />
         <TextField fx:id="officeLocationField" />
      </HBox>

      <!-- Courses Offered -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Courses Offered" />
         <TextField fx:id="coursesOfferedField" />
         <Label text="(separated by only commas)" />
      </HBox>

      <!-- Password -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Password:" />

         <TextField fx:id="passwordField" />
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <Label text="Profile Photo" />

         <Button fx:id="uploadButton" onAction="#upload" text="Upload" />
      </HBox>

      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="20.0">
         <Button fx:id="saveButton" mnemonicParsing="false" onAction="#save" text="Save" />
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
      </HBox>
   </children>
</VBox>
</AnchorPane>
