<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="engg1420_project.universitymanagementsystem.subject.SubjectDialogController">
    <children>
        <GridPane hgap="10" vgap="10">
            <Label text="Subject Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Subject Code:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Button text="Save" onAction="#handleSave" />
                <Button text="Cancel" onAction="#handleCancel" />
            </HBox>
        </GridPane>
    </children>
</AnchorPane>