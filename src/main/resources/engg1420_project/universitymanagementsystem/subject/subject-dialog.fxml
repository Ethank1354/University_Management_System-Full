            <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button onAction="#handleSave" text="Save" />
                <Button onAction="#handleCancel" text="Cancel" />
            </HBox>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
