<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1000" stylesheets="@../dashboard/dashboard-style.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engg1420_project.universitymanagementsystem.login.LoginController">
   <left>
      <VBox alignment="CENTER_LEFT" focusTraversable="true" prefHeight="300.0" prefWidth="180.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <Label prefHeight="20.0" prefWidth="133.0" text="Menu">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" top="20.0" />
            </VBox.margin>
            <padding>
               <Insets left="20.0" />
            </padding>
         </Label>
         <Button fx:id="dashboard" mnemonicParsing="false" onAction="#openDashboardMain" prefHeight="25.0" prefWidth="96.0" text="Dashboard">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="faculty_management" mnemonicParsing="false" onAction="#openFaculty" text="Faculty Management">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="student_management" mnemonicParsing="false" onAction="#openStudents" text="Student Management">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="course_management" mnemonicParsing="false" onAction="#openCourses" text="Course Management">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="event_management" mnemonicParsing="false" onAction="#openEvents" text="Event Management">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="subject_management" mnemonicParsing="false" onAction="#openSubjects" text="Subject Management">
            <VBox.margin>
               <Insets bottom="10.0" left="20.0" />
            </VBox.margin>
         </Button>
      </VBox>
   </left>
   <right>
      <AnchorPane fx:id="contentPane" prefHeight="200.0" prefWidth="800" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="logo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/GuelphLogo.png" />
               </image>
            </ImageView>

            <!-- Spacer to push the button to the right -->
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="excelButton" mnemonicParsing="false" onAction="#importFromExcel" text="Import From Excel" />

            <Button fx:id="logout" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#logout" prefHeight="25.0" prefWidth="96.0" text="Logout" />
         </children>
      </HBox>
   </top>
</BorderPane>
